<section class="section dashboard">
<div class="row">
    {# Left side columns #}
    <div class="col-lg-8">
        <div class="row">
            {# Sales Card #}
            <div class="col-xxl-4 col-md-6">
                <div class="card info-card sales-card">
                    <div class="card-body">
                    <h5 class="card-title">Fecha de expiraci&oacute;n </span></h5>

                    <div class="d-flex align-items-center">
                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bx bx-calendar"></i>
                        </div>
                        <div class="ps-3">
                            {% if cuenta_activa and (not vencido) %}
                            <h6>{{caduca}}</h6>
                            <span class="text-success small pt-1 fw-bold">{{dias_restantes}}</span> <span class="text-muted small pt-2 ps-1">dias restantes</span>
                            {% elseif vencido %}
                            <span class="text-danger small pt-1 fw-bold">Subscripcion vencida</span>
                            {% else %}
                            <span class="text-error small pt-1 fw-bold">Su cuenta no est&aacute; activada</span>
                            {% endif %}
                        </div>
                    </div>
                    </div>

                </div>
            </div>

            <div class="col-xxl-4 col-md-6">
                <div class="card info-card revenue-card">
                    <div class="card-body">
                        <h5 class="card-title">Espacio utilizado <span>| En total</span></h5>
                        <div class="d-flex align-items-center">
                            <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                <i class="bx bxs-doughnut-chart"></i>
                            </div>
                            <div class="ps-3">
                                <h6>{{size}}</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xxl-4 col-xl-12">
                <div class="card info-card customers-card">
                    <div class="card-body">
                    <h5 class="card-title">im&aacute;genes</h5>

                    <div class="d-flex align-items-center">
                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-images"></i>
                        </div>
                        <div class="ps-3">
                            <h6>{{cant_imgs}}</h6>
                        </div>
                    </div>
                    </div>
                </div>
